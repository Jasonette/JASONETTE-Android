/*
You can find this definition in the official repo: https://github.com/jasonelle/docs/tree/develop/examples/jasonette/apps/jason-app

*/
{
    "$jason": {
        "head": {
            "title": "Jason",
            "actions": {
                "$pull": {
                    "trigger": "scan"
                },
                "remove": {
                    "type": "$set",
                    "options": {
                        "del": "{{$jason.url}}"
                    },
                    "success": {
                        "type": "$cache.set",
                        "options": {
                            "history": "{{$cache.history.filter(function(item){return item.url!=$get.del;})}}"
                        },
                        "success": {
                            "type": "$reload"
                        }
                    }
                },
                "scan": {
                    "type": "$href",
                    "options": {
                        "url": "https://raw.githubusercontent.com/jasonelle/docs/develop/examples/jasonette/apps/jason-app/qr.json"
                    },
                    "success": {
                        "type": "$set",
                        "options": {
                            "url": [
                                {
                                    "{{#if /jason:/.test($jason.content)}}": "{{$jason.content.match(/http.*/)[0]}}"
                                },
                                {
                                    "{{#else}}": "{{$jason.content}}"
                                }
                            ]
                        },
                        "success": {
                            "trigger": "say"
                        }
                    }
                },
                "say": {
                    "type": "$set",
                    "options": [
                        {
                            "{{#if /http.?:\\/\\//.test($get.url)}}": {
                                "url": "{{$get.url}}"
                            }
                        },
                        {
                            "{{#else}}": {
                                "url": "https://jasonbase.com/things/{{$get.url}}"
                            }
                        }
                    ],
                    "success": {
                        "type": "$network.request",
                        "options": [
                            {
                                "{{#if /http.?:\\/\\//.test($get.url)}}": {
                                    "url": "{{$get.url}}"
                                }
                            },
                            {
                                "{{#else}}": {
                                    "url": "https://jasonbase.com/things/{{$get.url}}"
                                }
                            }
                        ],
                        "success": [
                            {
                                "{{#if $jason && ('$jason' in $jason) && ('head' in $jason['$jason']) && ('title' in $jason['$jason']['head']) }}": {
                                    "type": "$cache.set",
                                    "options": {
                                        "history": "{{ [{title: $jason['$jason']['head']['title'], url: $get.url}].concat($cache.history) }}"
                                    },
                                    "success": {
                                        "trigger": "refresh"
                                    }
                                }
                            },
                            {
                                "{{#else}}": {
                                    "type": "$cache.set",
                                    "options": {
                                        "history": "{{ [{title: 'No title', url: $get.url}].concat($cache.history) }}"
                                    },
                                    "success": {
                                        "trigger": "refresh"
                                    }
                                }
                            }
                        ],
                        "error": {
                            "type": "$util.banner",
                            "options": {
                                "title": "Error",
                                "description": "Please enter a valid url."
                            }
                        }
                    }
                },
                "refresh": [
                    {
                        "{{#if $cache && 'history' in $cache}}": {
                            "type": "$render"
                        }
                    },
                    {
                        "{{#else}}": {
                            "type": "$cache.set",
                            "options": {
                                "history": [

                                ]
                            },
                            "success": {
                                "type": "$render"
                            }
                        }
                    }
                ],
                "load": {
                    "type": "$cache.reset"
                },
                "$load": {
                    "trigger": "refresh"
                },
                "$foreground": {
                    "type": "$reload"
                }
            },
            "templates": {
                "body": {
                    "header": {
                        "title": "{·ᴥ·}",
                        "menu": {
                            "text": "Documentation",
                            "href": {
                                "url": "https://jasonelle.com/docs",
                                "view": "web"
                            }
                        }
                    },
                    "sections": [
                        {
                            "header": {
                                "type": "vertical",
                                "style": {
                                    "background": "rgba(255,255,255,0.95)"
                                },
                                "components": [
                                    {
                                        "type": "label",
                                        "style": {
                                            "font": "HelveticaNeue-Bold",
                                            "size": "12"
                                        },
                                        "text": "Jason is a JSON browser"
                                    },
                                    {
                                        "type": "label",
                                        "style": {
                                            "color": "#cecece",
                                            "font": "HelveticaNeue",
                                            "size": "12"
                                        },
                                        "text": "Enter a valid JASON url below, or view the documentation to learn how to write one."
                                    }
                                ]
                            }
                        },
                        {
                            "items": [
                                {
                                    "{{#if $cache && 'history' in $cache}}": {
                                        "{{#each $cache.history}}": {
                                            "type": "horizontal",
                                            "href": {
                                                "url": "{{url}}",
                                                "loading": "true"
                                            },
                                            "style": {
                                                "color": "#cecece",
                                                "spacing": "10"
                                            },
                                            "menu": {
                                                "items": [
                                                    {
                                                        "text": "delete",
                                                        "action": {
                                                            "type": "$set",
                                                            "options": {
                                                                "del": "{{url}}"
                                                            },
                                                            "success": {
                                                                "type": "$cache.set",
                                                                "options": {
                                                                    "history": "{{$cache.history.filter(function(item){return item.url!=$get.del;})}}"
                                                                },
                                                                "success": {
                                                                    "type": "$reload"
                                                                }
                                                            }
                                                        }
                                                    }
                                                ]
                                            },
                                            "components": [
                                                {
                                                    "type": "button",
                                                    "text": "Delete",
                                                    "style": {
                                                        "width": "80",
                                                        "background": "#DD2209",
                                                        "color": "#FFD351"
                                                    },
                                                    "action": {
                                                        "trigger": "remove",
                                                        "options": {
                                                            "url": "{{url}}"
                                                        }
                                                    }
                                                },
                                                {
                                                    "type": "vertical",
                                                    "components": [
                                                        {
                                                            "type": "label",
                                                            "style": {
                                                                "font": "HelveticaNeue-Bold",
                                                                "size": "12"
                                                            },
                                                            "text": "{{title}}"
                                                        },
                                                        {
                                                            "type": "label",
                                                            "style": {
                                                                "font": "HelveticaNeue-Bold",
                                                                "size": "10",
                                                                "color": "#cecece"
                                                            },
                                                            "text": "{{url}}"
                                                        }
                                                    ]
                                                }
                                            ]
                                        }
                                    }
                                },
                                {
                                    "{{#else}}": [

                                    ]
                                }
                            ]
                        }
                    ],
                    "footer": {
                        "input": {
                            "name": "url",
                            "placeholder": "Enter a valid jason url",
                            "left": {
                                "image": "https://raw.githubusercontent.com/jasonelle/docs/develop/examples/jasonette/apps/jason-app/images/qr-code.png",
                                "action": {
                                    "trigger": "scan"
                                }
                            },
                            "right": {
                                "text": "Go",
                                "style": {
                                    "color": "#000000"
                                },
                                "action": {
                                    "trigger": "say"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}